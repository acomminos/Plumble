<?xml version="1.0" encoding="utf-8"?>

<!-- The red talk indicator to surround the user's avatar when talking. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/ripple_talk_state_on" />

            <stroke
                android:width="1dp"
                android:color="@color/ripple_talk_state_on"/>

            <size
                android:width="48dp"
                android:height="48dp" />
        </shape>
    </item>
    <item android:drawable="@drawable/ic_action_microphone" />
</layer-list>